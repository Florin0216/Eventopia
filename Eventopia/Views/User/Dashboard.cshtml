@{
    ViewData["Title"] = "User";
    Layout = "_Layout";
}

<div>
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center d-flex justify-content-center " >
                <div class="card-body">
                    <img src="~/Images/user.png" class="profile rounded-circle mb-3" alt="profile"/>
                    <div class="user-name h4 mb-3">Welcome, User!</div>
                    <div class="user-options">
                        <a href="#" class="btn btn-outline-primary btn-sm mb-2"><i class="fas fa-edit"></i> Edit Account</a>
                        <a href="#" class="btn btn-outline-secondary btn-sm mb-2"><i class="fas fa-key"></i> Forgot Password</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-4">
                        <h3 class="card-title">Upcoming Events</h3>
                        <div>
                            <button id="upcomingEventsBtn" class="btn btn-outline-warning">Upcoming Events</button>
                            <button id="completedEventsBtn" class="btn btn-outline-success">Completed Events</button>
                        </div>
                    </div>
                    <div id="upcomingEvents" class="event-section">
                        <div class="list-group">
                            <a asp-controller="Event" asp-action="EventDetails" class="list-group-item list-group-item-action d-flex justify-content-between">
                                <div>
                                    <h5 class="mb-2">Concert Night</h5>
                                    <p class="card-text m-1"><i class="fas fa-calendar-alt p-1"></i>Date: 2023-12-15</p>
                                    <p class="card-text m-1"><i class="fas fa-map-marker-alt p-1"></i>Location: New York</p>
                                </div>
                                <div class="pt-4">
                                    <button class="btn btn-success btn-sm">
                                        <i class="bi bi-download"></i>
                                    </button>
                                </div>
                            </a>
                            <a asp-controller="Event" asp-action="EventDetails" class="list-group-item list-group-item-action d-flex justify-content-between">
                                <div>
                                    <h5 class="mb-2">Tech Conference</h5>
                                    <p class="card-text m-1"><i class="fas fa-calendar-alt p-1"></i>Date: 2024-01-20</p>
                                    <p class="card-text m-1"><i class="fas fa-map-marker-alt p-1"></i>Location: San Francisco</p>
                                </div>
                                <div class="pt-4">
                                    <button class="btn btn-success btn-sm">
                                        <i class="bi bi-download"></i>
                                    </button>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>