@{
  ViewData["Title"] = "Home";
  Layout = "_Layout";
}
<div class="container">
  <div class="row justify-content-center">
    <div id="carouselExampleCaptions" class="carousel slide m-4">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="Images/image1.webp" class="img-fluid carousel-image rounded-top-4" alt="...">
          <div class="text-center caption pt-2 rounded-bottom-4">
            <h5>The road to the 2026 World Cup</h5>
            <p>Participate in Romania's matches and support them along the way</p>
          </div>
        </div>
        <div class="carousel-item">
          <img src="Images/image2.jpeg" class="img-fluid carousel-image rounded-top-4" alt="...">
          <div class="text-center caption pt-2 rounded-bottom-4">
            <h5>Beach Please 2025</h5>
            <p>Participate in the biggest festival in Romania</p>
          </div>
        </div>
        <div class="carousel-item">
          <img src="Images/image3.jpg" class="img-fluid carousel-image rounded-top-4" alt="...">
          <div class="text-center caption pt-2 rounded-bottom-4">
            <h5>InterCity 2025</h5>
            <p>Join the fun in Craiova in June</p>
          </div>
        </div>
        <div class="carousel-item">
          <img src="Images/image4.webp" class="img-fluid carousel-image rounded-top-4" alt="...">
          <div class="text-center caption pt-2 rounded-bottom-4">
            <h5>Avarul</h5>
            <p>Get a ticket to the last performances of this classic skit</p>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev rounded-circle" type="button" data-bs-target="#carouselExampleCaptions"
              data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
              data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <a class="btn custom-btn btn-lg w-50" asp-controller="Event" asp-action="EventListing">
      View all events
    </a>
  </div>
</div>
<div class="container text-center mt-4">
  <div class="d-flex justify-content-around">
    <div class="d-flex flex-column align-items-center">
      <button type="button" class="btn custom-btn rounded-circle btn-lg">
        <i class="bi bi-music-note-beamed"></i>
      </button>
      <span class="mt-2 btn-label">Music</span>
    </div>
    <div class="d-flex flex-column align-items-center">
      <button type="button" class="btn custom-btn rounded-circle btn-lg"><i class="fa-solid fa-medal"></i></button>
      <span class="mt-2 btn-label">Sports</span>
    </div>
    <div class="d-flex flex-column align-items-center">
      <button type="button" class="btn custom-btn rounded-circle btn-lg"><i class="bi bi-pc-display"></i></button>
      <span class="mt-2 btn-label">Tech</span>
    </div>
    <div class="d-flex flex-column align-items-center">
      <button type="button" class="btn custom-btn rounded-circle btn-lg"><i class="fa-solid fa-utensils"></i></button>
      <span class="mt-2 btn-label">Food</span>
    </div>
    <div class="d-flex flex-column align-items-center">
      <button type="button" class="btn custom-btn rounded-circle btn-lg"><i class="bi bi-brush"></i></button>
      <span class="mt-2 btn-label">Art</span>
    </div>
  </div>
</div>
<section class="py-5">
  <div class="container">
    <h2 class="text-center mb-4">Popular events</h2>
    <div class="row">
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="Images/concert.webp" class="card-img-top" alt="Event 1">
          <div class="card-body">
            <h5 class="card-title">Concerts</h5>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="Images/soccer.webp" class="card-img-top" alt="Event 2">
          <div class="card-body">
            <h5 class="card-title">Football</h5>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="Images/tech.jpg" class="card-img-top" alt="Event 3">
          <div class="card-body">
            <h5 class="card-title">Tech Conferences</h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="p-4 bg-light text-center">
  <div class="container">
    <h2>Stay Updated!</h2>
    <p class="mb-4">Subscribe to our newsletter to receive the latest event updates and exclusive offers.</p>
    <form class="d-flex justify-content-center">
      <input type="email" class="form-control w-50" placeholder="Enter your email" required>
      <button type="submit" class="btn btn-primary ms-2">Subscribe</button>
    </form>
    <div class="mt-4">
      <h5>Follow us on social media</h5>
      <a href="#" class="btn btn-outline-dark mx-1"><i class="bi bi-facebook"></i></a>
      <a href="#" class="btn btn-outline-dark mx-1"><i class="bi bi-instagram"></i></a>
      <a href="#" class="btn btn-outline-dark mx-1"><i class="bi bi-twitter-x"></i></a>
    </div>
  </div>
</section>
