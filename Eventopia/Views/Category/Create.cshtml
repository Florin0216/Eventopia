@model Category

@{
    ViewData["Title"] = "Create Category";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-title text-center p-3">
                    <h2>Create new category</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create" asp-controller="Category">
                        <div class="mb-3">
                            <label for="categoryName" class="form-label">Category Name</label>
                            <input asp-for="Name" type="text" class="form-control" id="categoryName"
                                   placeholder="Enter category name" required>
                        </div>
                        <div class="mb-3">
                            <label for="categoryDescription" class="form-label">Category Description</label>
                            <textarea asp-for="Description" rows="3" type="text" class="form-control" id="categoryDescription"
                                      placeholder="Enter category description" required>
                        </textarea>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>