@model Checkout

@{
    ViewData["Title"] = "Confirmation";
    Layout = "_Layout";
    
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success display-1"></i>
                    </div>
                    <h1 class="display-4 mb-4">Thank you for your purchase!</h1>
                    <p class="lead">Your order has been successfully processed. Below are the details of your purchase.</p>
                    <div class="card mb-4">
                        <div class="card-body text-start">
                            <h5 class="card-title mb-3">Order Details</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Order ID: @Model.Id</strong></li>
                                <li class="list-group-item"><strong>Event: @Model.Event?.Name</strong></li>
                                <li class="list-group-item"><strong>Date: @Model.CheckoutDate</strong></li>
                                <li class="list-group-item"><strong>Location: @Model.Location</strong></li>
                                <li class="list-group-item"><strong>Ticket Type: @Model.Type</strong></li>
                                <li class="list-group-item"><strong>Quantity: @Model.Quantity</strong></li>
                                <li class="list-group-item"><strong>Total Amount: @Model.Amount</strong></li>
                            </ul>
                        </div>
                    </div>
                    <div class="mb-4">
                        <button class="btn btn-success btn-lg">
                            <i class="bi bi-download me-2"></i>
                            Download Tickets
                        </button>
                    </div>
                    <div>
                        <a href="/" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>
                            Continue Browsing
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>